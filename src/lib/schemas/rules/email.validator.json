{
    "duplicate": {
        "value": true,
        "message": "Name is already in use",
        "customMessage": "{name} is already in use"
    },
    "min": {
        "value": 2,
        "message": "Name must be at least 2 characters long",
        "customMessage": "{name} must be at least {min} characters long"
    },
    "max": {
        "value": 256,
        "message": "Name must be less than 256 characters long",
        "customMessage": "{name} must be less than {max} characters long"
    },
    "required": {
        "value": true,
        "message": "Name is required",
        "customMessage": "{name} is required"
    },
    "regex": {
        "value": "^(?=.*[\\p{L}\\p{P}\\p{S}\\d])(^[\\p{L}\\p{P}\\p{S}\\d]+([\\s\\p{P}\\p{S}]{0,1}[\\p{L}\\p{P}\\p{S}\\d]+)*)*$",
        "flags": "iu",
        "message": "Name is invalid",
        "customMessage": "{name} is invalid"
    },
    "valid": {
        "value": true,
        "message": "Name is invalid",
        "customMessage": "{name} is invalid"
    },
    "replace": {
        "values": {
            "name": {
                "variable": "{name}",
                "default": "Name"
            },
            "min": {
                "variable": "{min}",
                "default": 2
            },
            "max": {
                "variable": "{max}",
                "default": 256
            }
        }
    }
