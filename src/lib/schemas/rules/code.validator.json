        "message": "Code is invalid",
        "customMessage": "{name} is invalid"
    },
    "valid": {
        "value": true,
        "message": "Code is invalid",
        "customMessage": "{name} is invalid"
    },
    "replace": {
        "values": {
            "name": {
                "variable": "{name}",
                "default": "Code"
            },
            "min": {
